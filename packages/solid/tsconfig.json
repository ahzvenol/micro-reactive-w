{
    "include": ["**/*.ts"],
    "compilerOptions": {
        "strict": true,
        "target": "ES2015",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmit": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "noErrorTruncation": true,
    }
}
